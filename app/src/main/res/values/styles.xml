<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="CalculatorButton.Number" parent="CalculatorButton">
        <item name="android:backgroundTint">#424242</item>
    </style>

    <style name="CalculatorButton.Number.Wide" parent="CalculatorButton.Number">
        <item name="android:layout_columnSpan">2</item>
    </style>

    <style name="CalculatorButton.Operator" parent="CalculatorButton">
        <item name="android:backgroundTint">#FF9800</item>
    </style>
</resources>